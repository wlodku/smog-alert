            <%= link_to "Wykres miesięczny: listopad 2017", aktualnosci_listopad2017_path, class: " w3-bar-item w3-button w3-hide-small w3-padding-large w3-hover-white "%>
          </div>
        </div>
        <%= link_to "List do sąsiada", list_path, class: " w3-bar-item w3-button w3-hide-small w3-padding-large w3-hover-white "%>
        <%= link_to "Widgety", widgety_path, class: " w3-bar-item w3-button w3-hide-small w3-padding-large w3-hover-white "%>
        <%= link_to "Kontakt", kontakt_path, class: " w3-bar-item w3-button w3-hide-small w3-padding-large w3-hover-white "%>
        <!-- <a href="#" class="w3-bar-item w3-button w3-hide-small w3-padding-large w3-hover-white">Czym oddychamy</a>
        <a href="#" class="w3-bar-item w3-button w3-hide-small w3-padding-large w3-hover-white">Co możemy zrobić?</a> -->
        <!-- <a href="#" class="w3-bar-item w3-button w3-hide-small w3-padding-large w3-hover-white">Kontakt</a> -->

        <a href="https://www.facebook.com/JaworznickiAlarmSmogowy/" class="w3-bar-item w3-button w3-hide-small w3-padding-large w3-hover-white">
          <i class="fa fa-facebook-official w3-hover-opacity"></i>
        </a>
        <!-- Users/notif -->

        <% if user_signed_in? %>
        <div class="w3-dropdown-hover w3-right">
          <button class="w3-button w3-hide-small w3-padding-large w3-hover-white"><i class="fa fa-user"></i> <%= current_user.email %></button>
          <div class="w3-dropdown-content w3-bar-block w3-border">
            <%= link_to "Edycja profilu", edit_user_registration_path, class: " w3-bar-item w3-button w3-hide-small w3-padding-large w3-hover-white " %>
            <%= link_to "Wyloguj", destroy_user_session_path, method: :delete, class: " w3-bar-item w3-button w3-hide-small w3-padding-large w3-hover-white " %>
          </div>
        </div>

          <% if current_user.is_admin %>
            <div class="w3-dropdown-hover w3-right">
              <button class="w3-button w3-hide-small w3-padding-large w3-hover-white"><i class="fa fa-cog"></i> Administracja</button>
              <div class="w3-dropdown-content w3-bar-block w3-border">
                <%= link_to "Ustawienia", installations_path, class: " w3-bar-item w3-button w3-hide-small w3-padding-large w3-hover-white " %>
                <%= link_to "Użytkownicy", people_path, class: " w3-bar-item w3-button w3-hide-small w3-padding-large w3-hover-white " %>
              </div>
            </div>
          <% end %>

        <% end %>
        <div class="w3-dropdown-hover w3-right">
          <button class="w3-button w3-hide-small w3-padding-large w3-hover-white"><i class="fa fa-bell"></i> System ostrzegania</button>
          <div class="w3-dropdown-content w3-bar-block w3-border">
            <% if !user_signed_in? %>
              <%= link_to "Zaloguj", new_user_session_path, class: " w3-bar-item w3-button w3-hide-small w3-padding-large w3-hover-white "%>
              <%= link_to "Zarejestruj", new_user_registration_path, class: " w3-bar-item w3-button w3-hide-small w3-padding-large w3-hover-white "%>
            <% else %>
              <%= link_to "Ustawienia", subscriptions_path, class: " w3-bar-item w3-button w3-hide-small w3-padding-large w3-hover-white "%>
            <% end %>
            <%= link_to "Jak to działa?", alert_path, class: " w3-bar-item w3-button w3-hide-small w3-padding-large w3-hover-white "%>
          </div>
        </div>

        <div class="w3-bar-item w3-right w3-padding-large w3-hide-large w3-hide-medium">JAS</div>


      </div>

      <!-- Navbar on small screens -->
