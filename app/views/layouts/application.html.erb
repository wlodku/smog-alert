        <!-- < link_to "Analiza pomiarów", analiza_path, class: " w3-bar-item w3-button w3-hide-small w3-padding-large w3-hover-white "%> -->
        <div class="w3-dropdown-hover">
          <button class="w3-button w3-hide-small w3-padding-large w3-hover-white">Aktualności</button>
          <div class="w3-dropdown-content w3-bar-block w3-border">
            <%= link_to "Powietrze w Jaworznie: marzec 2018", aktualnosci_marzec2018_path, class: " w3-bar-item w3-button w3-hide-small w3-padding-large w3-hover-white "%>
            <%= link_to "Powietrze w Jaworznie: luty 2018", aktualnosci_luty2018_path, class: " w3-bar-item w3-button w3-hide-small w3-padding-large w3-hover-white "%>
