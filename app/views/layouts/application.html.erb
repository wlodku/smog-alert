        <%= link_to "Powietrze w Jaworznie: marzec 2018", aktualnosci_marzec2018_path, class: " w3-bar-item w3-button w3-padding-large w3-hover-white "%>
        <%= link_to "Powietrze w Jaworznie: luty 2018", aktualnosci_luty2018_path, class: " w3-bar-item w3-button w3-padding-large w3-hover-white "%>
        <%= link_to "Wiarygodność urządzeń pomiarowych", aktualnosci_pomiary_path, class: " w3-bar-item w3-button w3-padding-large w3-hover-white "%>
        <%= link_to "Powietrze w Jaworznie: styczeń 2018", aktualnosci_styczen2018_path, class: " w3-bar-item w3-button w3-padding-large w3-hover-white "%>
        <%= link_to "Wykres miesięczny: grudzień 2017", aktualnosci_grudzien2017_path, class: " w3-bar-item w3-button w3-padding-large w3-hover-white "%>
        <%= link_to "Wykres miesięczny: listopad 2017", aktualnosci_listopad2017_path, class: " w3-bar-item w3-button w3-padding-large w3-hover-white "%>
        <%= link_to "List do sąsiada", list_path, class: " w3-bar-item w3-button w3-padding-large w3-hover-white "%>
        <%= link_to "Widgety na stronę", widgety_path, class: " w3-bar-item w3-button w3-padding-large "%>
        <%= link_to "Powiadomienia - jak to działa?", alert_path, class: " w3-bar-item w3-button w3-padding-large "%>
        <%= link_to "Kontakt", kontakt_path, class: " w3-bar-item w3-button w3-padding-large "%>
        <% if user_signed_in? %>
          <%= link_to "Edycja konta", edit_user_registration_path, class: " w3-bar-item w3-button w3-padding-large w3-hover-white "%>
          <%= link_to "Ustawienia powiadomień", subscriptions_path, class: " w3-bar-item w3-button w3-padding-large w3-hover-white "%>
            <% if current_user.is_admin %>
              <%= link_to "Administracja", installations_path, class: " w3-bar-item w3-button w3-padding-large w3-hover-white "%>
            <% end %>
          <%= link_to "Wyloguj", destroy_user_session_path, method: :delete, class: " w3-bar-item w3-button w3-padding-large w3-hover-white "%>
        <% else %>
        <%= link_to "Zarejestruj", new_user_registration_path, class: " w3-bar-item w3-button w3-padding-large w3-hover-white "%>
        <%= link_to "Zaloguj", new_user_session_path, class: " w3-bar-item w3-button w3-padding-large w3-hover-white "%>

        <% end %>
